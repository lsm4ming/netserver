    "version": "0.2.0",
    "configurations": [
        {
            "name": "base01",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/base01/base01-bin", // 修改为你的可执行文件路径
            "args": [], // 传递给可执行文件的参数
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build", // 在启动调试前执行的任务，确保 CMake 构建了你的项目
            "miDebuggerPath": "/usr/bin/gdb" // GDB 的路径
        },
        {
            "name": "base02-server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/base02/base02-server-bin",
            "args": [
                "127.0.0.1",
                "9999"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "base03-epoll-server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/base03/base03-epoll-server-bin",
            "args": [
                "127.0.0.1",
                "9999"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}