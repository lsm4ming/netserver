{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "conan",
            "type": "shell",
            "command": "conan install ${workspaceFolder}/conanfile.txt --build=missing",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake . -B build -DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/cmake-build-debug/conan_toolchain.cmake",
            "dependsOn":[
                "conan"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --target all",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":[
                "cmake"
            ]
        },
        {
			"label": "Build",
			"dependsOn":[
				"build"
			]
		}
    ]
}