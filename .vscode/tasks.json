{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake .",
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder} --target all",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
			"label": "Build",    // launch.json里面的preLaunchTask
			"dependsOn":[
                "cmake",
				"build"
			]
		}
    ]
}